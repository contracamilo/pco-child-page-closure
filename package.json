{
  "name": "lit",
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "wtr --config web-test-runner.config.js --debug --verbose",
    "test:watch": "wtr --watch --config web-test-runner.config.js --debug",
